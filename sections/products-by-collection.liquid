{% if section.settings.view_style == 'slides' %}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.js' | asset_url | script_tag_deferred }}
{% endif %}

{%- assign collection = section.settings.collection -%}
{%- assign number_of_products = section.settings.max_products -%}

<yc-section
  style="
    --section-space-top: {{ section.settings.space_top }}px;
    --section-space-bottom: {{ section.settings.space_bottom }}px;
    --section-bg-color: {{ section.settings.background_color.hex }};
    --section-text-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};
    --section-arrows-foreground: rgb(var(--section-text-color));
    --section-arrows-background: var(--section-bg-color);

    --items-columns: {{ section.settings.product_columns }};
    --product-card-background: var(--section-bg-color);
    --product-card-foreground: var(--section-text-color);
    --product-card-border-color: rgba(var(--product-card-foreground), 0.15);
    --product-card-border: 1px solid var(--product-card-border-color);
  "
>
  {% if section.settings.title or section.settings.description %}
    <yc-section-head data-position="{{ section.settings.position }}">
      {% if section.settings.title %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </yc-section-head>
  {% endif %}
  <div class="products-by-collection">
    {% if section.settings.view_style == 'grid' %}
      <ul class="items-grid">
        {% if collection %}
          {%- paginate collection.products by number_of_products id category_id: collection.id %}
            {%- for item in items -%}
              <li>
                {%- render 'product-card', product: item -%}
              </li>
            {%- endfor -%}
          {%- endpaginate %}
        {% else %}
          {%- for _ in (1..number_of_products) -%}
            <li>
              {%- render 'product-card', product: null -%}
            </li>
          {%- endfor -%}
        {% endif %}
        {% if section.settings.show_view_more == true %}
          <div class="show-more">
            <a
              href="/collections/{{ collection.slug }}"
              class="yc-btn icon"
              aria-label="{{ 'general.show_all_button' | t }}"
            >
              {{ 'general.show_all_button' | t }}
            </a>
          </div>
        {% endif %}
      </ul>
    {% else %}
      <yc-slider
        arrows
        responsive
        per-move="page"
        style="
          --slider-gap: 30;
          --slider-speed: 600;
          --slider-height: auto;
          --slider-per-page: {{ section.settings.product_columns }};

          --slider-max-items-lg: 2;
          --slider-max-items-md: 1;
        "
        role="region"
        aria-roledescription="Carousel"
      >
        <div class="slider-area">
          <div class="slider-box" data-slider-box>
            <div class="slider-inner" data-slider>
              {% if collection %}
                {%- paginate collection.products by number_of_products id category_id: collection.id %}
                  {%- for item in items -%}
                    <yc-slider-item role="group" aria-roledescription="slide">
                      {%- render 'product-card', product: item -%}
                    </yc-slider-item>
                  {%- endfor -%}
                {%- endpaginate %}
              {% else %}
                {%- for _ in (1..number_of_products) -%}
                  <yc-slider-item role="group" aria-roledescription="slide">
                    {%- render 'product-card', product: null -%}
                  </yc-slider-item>
                {%- endfor -%}
              {% endif %}
            </div>
          </div>
        </div>
        <yc-slider-footer>
          {% if section.settings.show_view_more == true %}
            <div class="show-more">
              <a
                href="/collections/{{ collection.slug }}"
                class="yc-btn secondary"
                aria-label="{{ 'general.show_all_button' | t }}"
              >
                {{ 'general.show_all_button' | t }}
              </a>
            </div>
          {% endif %}
          <yc-slider-arrows data-position="right">
            <div class="slider-arrows">
              <button class="icon" data-arrow="left" aria-label="previous" disabled>
                {% render 'yc-icon', name: 'arrow-left', size: 15 %}
              </button>
              <button class="icon" data-arrow="right" aria-label="next">
                {% render 'yc-icon', name: 'arrow-right', size: 15 %}
              </button>
            </div>
          </yc-slider-arrows>
        </yc-slider-footer>
      </yc-slider>
    {% endif %}
  </div>
</yc-section>

{%- schema -%}
{
  "templates": ["index"],
  "label": "t:sections.products_by_collection.label",
  "settings": [
    {
      "type": "category",
      "id": "collection",
      "label": "t:sections.products_by_collection.collection"
    },
    {
      "id": "title",
      "type": "text",
      "label": "t:sections.products_by_collection.title",
      "default": "t:sections.products_by_collection.title_default"
    },
    {
      "id": "description",
      "type": "textarea",
      "label": "t:sections.products_by_collection.description",
      "default": "t:sections.products_by_collection.description_default"
    },
    {
      "id": "position",
      "type": "select",
      "label": "t:sections.products_by_collection.header_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.products_by_collection.left"
        },
        {
          "value": "center",
          "label": "t:sections.products_by_collection.center"
        },
        {
          "value": "right",
          "label": "t:sections.products_by_collection.right"
        }
      ],
      "default": "center"
    },
    {
      "id": "view_style",
      "type": "select",
      "label": "t:sections.products_by_collection.view_style",
      "options": [
        {
          "value": "grid",
          "label": "t:sections.products_by_collection.grid"
        },
        {
          "value": "slides",
          "label": "t:sections.products_by_collection.slides"
        }
      ],
      "default": "grid"
    },
    {
      "id": "text_color",
      "type": "color",
      "label": "t:sections.products_by_collection.text_color",
      "default": "#121212"
    },
    {
      "id": "background_color",
      "type": "color",
      "label": "t:sections.products_by_collection.background_color",
      "default": "#FFFFFFFF"
    },
    {
      "id": "max_products",
      "type": "range",
      "label": "t:sections.products_by_collection.max_products",
      "min": 2,
      "max": 25,
      "step": 1,
      "unit": "",
      "default": 4
    },
    {
      "id": "product_columns",
      "type": "range",
      "label": "t:sections.products_by_collection.product_columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "unit": "",
      "default": 3
    },
    {
      "id": "show_view_more",
      "type": "checkbox",
      "label": "t:sections.products_by_collection.show_link_to_collection",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.products_by_collection.section_spacing"
    },
    {
      "id": "space_top",
      "type": "range",
      "label": "t:sections.products_by_collection.space_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "id": "space_bottom",
      "type": "range",
      "label": "t:sections.products_by_collection.space_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    }
  ]
}
{%- endschema -%}
